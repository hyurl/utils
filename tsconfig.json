{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "rootDir": "./src/",
        "outDir": "./",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "./test/*",
        "./node_modules/*"
    ]
}
